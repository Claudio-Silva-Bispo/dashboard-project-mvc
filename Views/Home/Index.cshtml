﻿@{
    ViewData["Title"] = "Index";
}

<div class="container col-xxl-8 px-4 py-5 p-3" style="min-height: 80vh;">
    <div class="row flex-lg-row-reverse align-items-center justify-content-center g-5 py-5">
        <!-- Imagem Hero -->
        <div class="col-10 col-sm-8 col-lg-6 d-flex justify-content-center">
            <img src="/assets/Hero/imagem.png" class="d-block mx-auto img-fluid" alt="Ezze Seguros Dashboards" width="600" height="500" loading="lazy" style="object-fit: contain;">
        </div>
        
        <!-- Texto Hero -->
        <div class="col-lg-6 text-center text-lg-start p-5">
