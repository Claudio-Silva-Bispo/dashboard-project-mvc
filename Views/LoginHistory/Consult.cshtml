@model IEnumerable<BIProject.Models.LoginHistory>

@{
    ViewData["Title"] = "Hist칩rico de Logins realizados";
}

<section class="d-flex p-3" style="height: 80vh">

    <div class="d-flex flex-column w-50 d-flex justify-content-start" style="height: 80vh; align-items: center; border: 1px solid rgb(182, 181, 181);">

        <h2 class="mb-3 pt-5">Hist칩rico dos logins</h2>

        <div>
            <table class="table table-bordered" style="align-items: center; text-align: center;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Usu치rio</th>
                        <th>Email</th>
                        <th>Data e Hora</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Id</td>
                            <td>@log.IdUsuario</td>
                            <td>@log.Email</td>
                            <td>@log.DataHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Container da Imagem ocupando 80% da largura e 100% da altura -->
    <div class="w-100" style="height: 80vh">
        <img src="~/assets/LoginHistory/imagem.jpg" alt="Imagem de fundo para 치rea de cadastro cliente" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
    </div>

</section>