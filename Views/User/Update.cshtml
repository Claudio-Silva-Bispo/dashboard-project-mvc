@model BIProject.Models.User

@{
    ViewData["Title"] = "Atualizar dados do usuário";
}

<section class="d-flex justify-content-center align-items-center p-3 mb-5" style="height: 80vh;">
    
    <div class="d-flex w-100 h-100">
        
        <div class="container-fluid border p-4" style="width: 30%; min-height: 100%; background-color: #f8f9fa;">
            
            <h2>Atualizar dados</h2>
            
            <form asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Area" class="control-label">Departamento</label>
                    <input asp-for="Area" class="form-control" type="text"/>
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Senha" class="control-label">Senha</label>
                    <input asp-for="Senha" class="form-control" type="password"/>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a asp-controller="UserDetails" asp-action="Consult" class="btn btn-secondary">Consultar</a>
                </div>

                <!-- Exibir alerta de sucesso, se houver -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }
            </form>
        </div>

        <!-- Área de Imagem -->
        <div class="flex-grow-1 d-flex justify-content-center align-items-center">
            <img src="~/assets/UserDetails/imagem.png" alt="Imagem de fundo para área de cadastro usuário" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
        </div>

    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
