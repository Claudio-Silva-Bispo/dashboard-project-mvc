@model BIProject.Models.User

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<section class="d-flex justify-content-center align-items-center p-3 mb-5" style="height: 80vh">

    <div class="w-20 d-flex align-items-center justify-content-center pt-5" style="height: 100vh; padding-right: 10px;">
        
        <div class="container-fluid border p-4" style="min-height: 80vh; width: 60vh;">

            <h2 style="color: #028676;">Cadastro</h2>
            <form asp-action="Criar" method="post">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Area" class="control-label fs-6">Departamento</label>
                    <select asp-for="Area" class="form-control">
                        <option value="">Selecione um item</option>
                        <option value="Financeiro">Financeiro</option>
                        <option value="RH">RH</option>
                        <option value="Comercial">Comercial</option>
                        <option value="BI">BI</option>
                        <option value="Tecnologia">Tecnologia</option>
                        <option value="Outros">Outros</option>
                    </select>
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Senha" class="control-label">Senha</label>
                    <input asp-for="Senha" class="form-control" type="password"/>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <input type="submit" value="Salvar" class="btn" style="background-color: #028676; color: white;"/>
                </div>
            </form>
        </div>
    </div>

    <div class="w-100 mt-5" style="height: 80vh">
        <img src="~/assets/Cadastro/imagem5.png" alt="Imagem de fundo para área de cadastro usuario" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
    </div>
    
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
